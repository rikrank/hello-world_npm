{
  "git": {
    "commitMessage": "Release v${version}",
    "tagName": "v${version}",
    "requireUpstream": false,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": false
  },
  "npm": {
    "publishConfig": {
      "registry": "https://npm.pkg.github.com"
    }
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "commit": "docs: update changelog"
    }
  }
}
